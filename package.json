{
  "name": "steemconnect",
  "version": "0.1.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "node start.js",
    "build-electron:linux": "electron-builder --linux",
    "start-electron": "electron .",
    "heroku-postbuild": "npm install --only=dev --no-shrinkwrap && npm run build",
    "test:unit": "vue-cli-service test:unit",
    "build-electron": "npm run build-electron:mac && npm run build-electron:linux && npm run build-electron:win",
    "build-electron:mac": "electron-builder --mac",
    "build-electron:win": "electron-builder --win"
  },
  "dependencies": {
    "@vue/ui": "^0.5.2",
    "axios": "^0.18.0",
    "bs58": "^4.0.1",
    "dsteem": "^0.10.1",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "password-validator": "^4.1.1",
    "primer": "^10.8.1",
    "query-string": "^6.2.0",
    "serve-static": "^1.13.2",
    "steem-uri": "^0.1.1",
    "triplesec": "^3.0.26",
    "url-parse": "^1.4.3",
    "vue": "^2.5.17",
    "vue-i18n": "^8.0.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0",
    "@vue/cli-plugin-unit-jest": "^3.0.3",
    "@vue/cli-service": "^3.0.0",
    "@vue/eslint-config-airbnb": "^3.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "electron": "^3.0.0",
    "electron-builder": "^20.28.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "node-sass": "^4.9.3",
    "prettier": "1.14.3",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.17"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "build": {
    "appId": "com.steemconnect.app",
    "protocols": [
      {
        "name": "steem",
        "schemes": [
          "steem"
        ]
      }
    ],
    "linux": {
      "target": [
        "deb",
        "tar.xz"
      ]
    }
  },
  "author": "Bonustrack <fabien@bonustrack.co> (https://github.com/bonustrack)",
  "main": "electron-entry.js",
  "homepage": "https://steemconnect.com",
  "description": "Signer app for Steem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bonuschain/steemsign/issues"
  }
}
